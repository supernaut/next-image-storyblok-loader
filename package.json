{
  "name": "@supernaut/next-image-storyblok-loader",
  "version": "1.0.0",
  "repository": "https://github.com/supernaut/next-image-storyblok-loader.git",
  "author": "Johannes Axner <johannes@axner.io>",
  "description": "Storyblok image loader for the Next.js Image component",
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "lint": "biome check **/*.ts",
    "lint:fix": "biome check --write **/*.ts",
    "cz": "pnpm dlx czg"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "keywords": ["nextjs", "image", "storyblok", "loader"],
  "license": "ISC",
  "packageManager": "pnpm@10.6.2",
  "exports": {
    ".": "./dist/lib/storyblok-image-loader.mjs",
    "./get-loader": "./src/lib/get-storyblok-image-loader.ts",
    "./img-src-is-storyblok": "./src/lib/img-src-is-storyblok.ts",
    "./options": "./src/types/storyblok-image-loader-options.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "22.14.0",
    "pnpm": "10.6.2"
  },
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^22.13.9",
    "cz-git": "^1.11.1",
    "lefthook": "^1.11.2",
    "next": "^15.2.1",
    "prop-types": "^15.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
